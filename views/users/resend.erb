<header>
	<!-- Navbar -->
	<nav>
	  <div class="nav-wrapper">
		<a href="#!" class="brand-logo">Matcha - Resend confirmation</a>
		<ul class="right hide-on-med-and-down">
			<li><a href="/"><i class="material-icons left">dashboard</i>Home</a></li>
			<li><a href="/users/sign_up"><i class="material-icons left">supervisor_account</i>Sign up</a></li>
		</ul>
	  </div>
	</nav>
	<!-- end Navbar -->
</header>

<br>
<br>

<main>
	<!-- Container -->
	<div class="container">

		<% flash.each do |flash| %>
			<p><%= flash[1] %><p>
		<% end %>

		<!-- Card -->
		<div class="row">
	        <div class="col s12 m12">
	          <div class="card">
	            <div class="card-content black-text">
					<h2>Resend confirmation mail</h2>
					<br>

					<!-- Form -->
					<div class="row">
		  		  		<form class="col s12" action="/users/resend" method="post">
		  		  		  <div class="row">
		  		  		    <div class="input-field col s6">
		  		  		      <input id="email" type="email" name="email" class="validate">
		  		  		      <label for="email">email</label>
		  		  		    </div>
		  		  		  </div>
						 <button class="btn waves-effect waves-light" type="submit" name="submit">Submit
							 <i class="material-icons right">send</i>
						 </button>
		  		  		</form>
		  		  	</div>
					<!-- end Form -->
	            </div>
	            <div class="card-action">
	              <a href="/">Home</a>
				  <a href="/users/sign_in">Sign in</a>
				  <a href="/users/sign_up">Sign up</a>
	            </div>
	          </div>
	        </div>
	      </div>
		  <!-- end Card -->
	</div>
	<!-- end Container -->
</main>
